<div id="wrapper">
<div id="appointment_dashboard" class="animate form">
<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Created by</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= current_user.user_type %>
    <% @appointments&.each do |appointment| %>
      <tr>
        
        <td><%= appointment.created_by %></td>
        <td><%= appointment.description %></td>
        <td><%= link_to 'Show', appointment, class:"btn btn-warning"%></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
</div>
</div>